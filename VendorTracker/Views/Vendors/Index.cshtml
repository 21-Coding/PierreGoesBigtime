@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Vendor Names</h1>

@if (Model.Count == 0)
{
<h3>This list is empty</h3>
}

@foreach (Vendor vendor in Model)
{
<h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}

<p><a href='/vendors/new'>New Vendor</a></p>
<p><a href='/'>Home</a></p>
